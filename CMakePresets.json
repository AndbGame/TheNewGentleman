{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "cmake-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "WIN32_LEAN_AND_MEAN": "ON",
        "Boost_USE_STATIC_RUNTIME": "OFF",
        "Boost_USE_STATIC_LIBS": "ON",
        "SKSE_SUPPORT_XBYAK": "ON",
        "CMAKE_CONFIGURATION_TYPES": "Release",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION_DEBUG": "OFF",
        "_UNICODE": "ON"
      }
    },
    {
      "name": "vcpkg",
      "hidden": true,
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows-static",
        "VCPKG_OVERLAY_PORTS": "${sourceDir}/cmake/ports/"
      }
    },
    {
      "name": "windows",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static"
      }
    },
    {
      "name": "vs2022",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "toolset": "v143",
      "cmakeExecutable": "C:/Program Files/CMake/bin/",
      "environment": {
        "COMMONLIBSSE_COMPILER": "/cgthreads8 /diagnostics:caret /EHsc /fp:contract /fp:except- /guard:cf- /MP /permissive- /sdl /W4 /Zc:__cplusplus /Zc:enumTypes /Zc:lambda /Zc:preprocessor /Zc:referenceBinding /Zc:rvalueCast /Zc:templateScope /Zc:ternary",
        "COMMONLIBSSE_LINKER": "/CGTHREADS:8 /MACHINE:x64 /DEBUG:FASTLINK"
      },
      "cacheVariables": {
        "CMAKE_CXX_FLAGS_RELWITHDEBINFO": "/fp:fast /GR- /Gw /O2 /Ob3 /Qpar",
        "CMAKE_SHARED_LINKER_FLAGS_RELWITHDEBINFO": "/LTCG:INCREMENTAL /OPT:REF,ICF=4"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-msvc-x64",
          "enableMicrosoftCodeAnalysis": true,
          "enableClangTidyCodeAnalysis": true
        }
      }
    },
    {
      "name": "se",
      "hidden": true,
      "binaryDir": "${sourceDir}/build"
    },
    {
      "name": "353",
      "hidden": true,
      "binaryDir": "${sourceDir}/build353",
      "cacheVariables": {
        "BUILD_SKYRIMAE": true,
        "BUILD_SKYRIM353": true
      }
    },
    {
      "name": "ae",
      "hidden": true,
      "binaryDir": "${sourceDir}/buildae",
      "cacheVariables": {
        "BUILD_SKYRIMAE": true
      }
    },
    {
      "name": "vr",
      "hidden": true,
      "binaryDir": "${sourceDir}/buildvr",
      "cacheVariables": {
        "BUILD_SKYRIMVR": true
      }
    },
    {
      "name": "vs2022-windows-vcpkg-se",
      "inherits": [
        "cmake-base",
        "vcpkg",
        "windows",
        "vs2022",
        "se"
      ]
    },
    {
      "name": "vs2022-windows-vcpkg-353",
      "inherits": [
        "cmake-base",
        "vcpkg",
        "windows",
        "vs2022",
        "353"
      ]
    },
    {
      "name": "vs2022-windows-vcpkg-ae",
      "inherits": [
        "cmake-base",
        "vcpkg",
        "windows",
        "vs2022",
        "ae"
      ]
    },
    {
      "name": "vs2022-windows-vcpkg-vr",
      "inherits": [
        "cmake-base",
        "vcpkg",
        "windows",
        "vs2022",
        "vr"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "vs2022-windows-vcpkg-ae",
      "configurePreset": "vs2022-windows-vcpkg-ae",
      "configuration": "Release"
    },
    {
      "name": "vs2022-windows-vcpkg-353",
      "configurePreset": "vs2022-windows-vcpkg-353",
      "configuration": "Release"
    },
    {
      "name": "vs2022-windows-vcpkg-se",
      "configurePreset": "vs2022-windows-vcpkg-se",
      "configuration": "Release"
    },
    {
      "name": "vs2022-windows-vcpkg-vr",
      "configurePreset": "vs2022-windows-vcpkg-vr",
      "configuration": "Release"
    }
  ]
}
